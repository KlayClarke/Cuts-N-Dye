<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Salon</h1>
  <div class="col-6 offset-3">
    <form action="/salons/<%= salon._id  %>?_method=PUT " method="post">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="salon[title]"
          id="title"
          value="<%= salon.title  %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <input
          class="form-control"
          type="text"
          name="salon[description]"
          id="description"
          value="<%= salon.description  %>"
        />
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Update Salon</button>
      </div>
    </form>
    <footer>
      <a href="/salons">Back To All Salons</a>
    </footer>
  </div>
</div>

<% layout('layouts/boilerplate') %>

<div>
  <span>
    <h3>All</h3>
  </span>
</div>

<% for(let salon of salons) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= salon.salonImage %> " alt="" class="img-fluid" />
    </div>
    <div class="col-mg-8">
      <div class="card-body">
        <h5 class="card-title"><%= salon.salonName %></h5>

        <p class="card-text"><%= salon.salonType %></p>
        <p class="card-text">
          <small class="text-muted">
            <%= `${salon.salonStreetAddress} ${salon.salonCity},
            ${salon.salonState} ${salon.salonZipCode}` %></small
          >
        </p>
        <a class="btn btn-light" href=" /salons/<%= salon._id  %>  "
          >View <%= salon.title %>
        </a>
      </div>
    </div>
  </div>
</div>

<% }%>
<h3><a href="/salons/new" style="text-decoration: none">+</a></h3>

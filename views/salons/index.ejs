<% layout('layouts/boilerplate') %>
<h1>All Salons</h1>
<div>
  <a href="/salons/new">Add Salon</a>
</div>

<% for(let salon of salons) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="" alt="" class="img-fluid" />
    </div>
    <div class="col-mg-8">
      <div class="card-body">
        <a href="">
          <h5 class="card-title"><%= salon.title %></h5>
        </a>
        <p class="card-text"><%= salon.description %></p>
        <p class="card-text">
          <small class="text-muted">Salon Location</small>
        </p>
        <a class="btn btn-primary" href=" /salons/<%= salon._id  %>  "
          >View <%= salon.title %>
        </a>
      </div>
    </div>
  </div>
</div>

<% }%>

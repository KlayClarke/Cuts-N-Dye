<link rel="stylesheet" href="/css/rating-stars.css" />
<% layout('layouts/boilerplate') %>
<script>
  const mapboxToken = "<%-process.env.MAPBOX_TOKEN%>";
  const salon = <%-JSON.stringify(salon)%>;
</script>
<div class="row">
  <div class="col-6">
    <div class="card">
      <div class="text-center">
        <img
          class="salon-image"
          src=" <%= salon.salonImage %>  "
          alt="salon image"
          height="400"
          width="400"
        />
      </div>
    </div>
    <div class="card mt-3">
      <div class="card-header">
        <%= salon.salonType %> <br />
        <span class="avg-price">$<%= salon.salonAveragePrice %></span>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= salon.salonName %></h5>
        <p class="card-text">
          <%= `${salon.salonStreetAddress} ${salon.salonCity},
          ${salon.salonState} ${salon.salonZipCode}` %>
        </p>
        <p class="text-muted">Submitted by <%= salon.salonAuthor.username %></p>
        <% if(currentUser && salon.salonAuthor.equals(currentUser._id)) { %>
        <div>
          <a href="/salons/<%= salon._id %>/edit " class="btn btn-warning mb-3"
            >Edit</a
          >
          <form
            class="d-inline"
            action="/salons/<%= salon._id  %>?_method=DELETE"
            method="post"
          >
            <button class="btn btn-danger mb-3">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>

  <div class="col-6">
    <% if(salon.salonLocation.coordinates.length) { %>
    <div class="card mb-3" id="map" style="width: 635px; height: 300px"></div>
    <% } %> <% if(currentUser) { %>
    <form
      class="mt-3 validated-form"
      action="/salons/<%= salon._id  %>/reviews "
      method="POST"
      novalidate
    >
      <h3>Leave A Review</h3>
      <div class="mb-3">
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
            required
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
            required
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
            checked
            required
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
            required
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
            required
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
        <label for="" class="invalid-feedback">Rating required</label>
      </div>

      <div class="mb-3">
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <label for="" class="invalid-feedback">Text required</label>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <hr />
    <% } %>
    <div class="mt-3 scrollable <% if(!currentUser) { %> full-length <% } %>">
      <% salon.salonReviews.slice().reverse().forEach(function(item) { %>
      <div class="card m-3">
        <div class="card-body">
          <h6 class="card-title text-muted"><%= item.author.username %></h6>
          <p class="starability-result" data-rating="<%= item.rating %>">
            Rated: <%= item.rating %> stars
          </p>
          <p><%= item.body %></p>
          <% if(currentUser && item.author._id.equals(currentUser._id)) { %>
          <form
            action="/salons/<%= salon._id %>/reviews/<%= item._id %>?_method=DELETE  "
            method="POST"
          >
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<script src="/js/mapboxDisplay.js"></script>

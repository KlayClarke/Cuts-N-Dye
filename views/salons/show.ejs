<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card">
      <div class="card-header"><%= salon.salonType %></div>
      <div class="card-body">
        <h5 class="card-title"><%= salon.salonName %></h5>
        <p class="card-text">
          <%= `${salon.salonStreetAddress} ${salon.salonCity},
          ${salon.salonState} ${salon.salonZipCode}` %>
        </p>
        <a
          href="https://www.google.com/maps/place/<%=`${salon.salonStreetAddress}+${salon.salonCity}+${salon.salonState}+${salon.salonZipCode}`%>"
          class="btn btn-primary mb-3"
          target="_blank"
          rel="noopener noreferrer"
          >Find On Google Maps</a
        >
        <div>
          <a href="/salons/<%= salon._id %>/edit " class="btn btn-warning mb-3"
            >Edit</a
          >
          <form
            class="d-inline"
            action="/salons/<%= salon._id  %>?_method=DELETE"
            method="post"
          >
            <button class="btn btn-danger mb-3">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <form
      class="mt-3 needs-validation"
      action="/salons/<%= salon._id  %>/reviews "
      method="POST"
      novalidate
    >
      <h3>Please Leave A Review</h3>
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          class="form-range"
          type="range"
          name="review[rating]"
          id="rating"
          min="1"
          max="5"
          placeholder="1"
        />
      </div>
      <div class="mb-3">
        <label for="body" class="form-label">Comment</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <label for="" class="invalid-feedback">Text required</label>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
<script>
  (function () {
    "use strict";

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.querySelectorAll(".needs-validation");

    // Loop over them and prevent submission
    Array.from(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
